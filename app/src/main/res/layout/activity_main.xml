<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:onClick="onClickAuthActivityButton"
                    android:text="OAuth" />

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:onClick="onClickSettingActivityButton"
                    android:text="Setting" />

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:onClick="onClickWakeUpActivityButton"
                    android:text="Wake Up" />

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:onClick="onClickOpenApiActivityButton"
                    android:text="Open Api" />

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:onClick="onClickZpTrackingActivityButton"
                    android:text="ZP Tracking" />

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:onClick="onClickLoginFormActivityButton"
                    android:text="Login Form" />

            <TextView
                    android:id="@+id/app_id_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </TableLayout>
    </ScrollView>
</LinearLayout>
