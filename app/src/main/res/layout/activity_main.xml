<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">
            <!--        region-->
            <Button
                    android:id="@+id/login_mobile_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Login Mobile" />

            <Button
                    android:id="@+id/login_via_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Login Via" />

            <Button
                    android:id="@+id/login_web_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Login Web" />

            <Button
                    android:id="@+id/register_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="REGISTER" />

            <Button
                    android:id="@+id/validate_oauth_code_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="VALIDATE OAUTH CODE" />

            <Button
                    android:id="@+id/check_app_login_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Check App Login" />

            <Button
                    android:id="@+id/setting_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Setting" />

            <Button
                    android:id="@+id/event_tracking_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Event Tracking" />

            <Button
                    android:id="@+id/wake_up_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Wake Up" />

            <Button
                    android:id="@+id/open_api_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Open Api" />

            <Button
                    android:id="@+id/zptracking_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="ZP Tracking" />

            <Button
                    android:id="@+id/authext_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#05A3E5"
                    android:gravity="center"
                    android:text="Authext" />

            <TextView
                    android:id="@+id/app_id_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/user_id_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/auth_code_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3" />

            <TextView
                    android:id="@+id/login_status_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3" />
            <!--        endregion-->
        </TableLayout>
    </ScrollView>
</LinearLayout>
